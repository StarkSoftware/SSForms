<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorFormMasterElementBackground"
    android:layout_width="match_parent"
    android:id="@+id/itemContainer"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/layoutRow"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/formElementTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_weight="2"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical"
            android:textColor="@color/colorFormMasterElementTextTitle"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Personal Info" />

        <it.starksoftware.ssform.segmented.SegmentedGroup
            android:id="@+id/formElementValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_checked_text_color="#ffffff"
            segmentedgroup:sc_corner_radius="10dp"
            segmentedgroup:sc_tint_color="@color/colorPrimary"
            segmentedgroup:sc_unchecked_tint_color="#ffffff">

            <RadioButton
                android:id="@+id/radioOne"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:tag="1"
                android:text="@string/one"
                android:textSize="14sp"
                android:textStyle="bold" />


            <RadioButton
                android:id="@+id/radioTwo"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:tag="1"
                android:text="@string/one"
                android:textSize="14sp"
                android:textStyle="bold" />

        </it.starksoftware.ssform.segmented.SegmentedGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorFormMasterDivider" />

</LinearLayout>